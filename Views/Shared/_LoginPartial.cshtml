@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-left">
        <li>
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
    }
}
else
{
<ul class="nav navbar-nav navbar-left">
    <li>@Html.ActionLink("ثبت نام ", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "btn btn-success glyphicon glyphicon-plus-sign ", @style = "margin-left:5px" })</li>

    <li>@Html.ActionLink("ورود", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "btn btn-success glyphicon glyphicon-collapse-down", @style = "margin-left:5px" })</li>

    <li>@Html.ActionLink("مدیر سیستم", "Admin", "Admin", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "btn btn-warning glyphicon glyphicon-collapse-down", @style = "margin-left:5px" })</li>
    <li>@Html.ActionLink("داشبورد", "Index", "Dashboard", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "btn btn-danger glyphicon glyphicon-collapse-down" })</li>
</ul>
}
